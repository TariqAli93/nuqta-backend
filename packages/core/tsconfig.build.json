{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "**/dist", "node_modules", "src/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
}
