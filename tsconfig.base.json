{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2023"],

    /* Strict Type-Checking */
    "strict": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Project References */
    "composite": true,
    "incremental": true
  }
}
